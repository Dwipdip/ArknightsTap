<resources>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorSecondary</item>
    </style>

    <style name="CheckBoxTagStyle">
        <item name="android:background">@drawable/bg_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_margin">@dimen/control_margin</item>
        <item name="android:padding">@dimen/control_padding</item>
        <item name="android:textColor">@color/color_checkbox_text</item>
    </style>
</resources>