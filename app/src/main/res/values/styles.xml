<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatusBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CheckBoxTagStyle">
        <item name="android:background">@drawable/bg_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">@dimen/control_margin</item>
        <item name="android:padding">@dimen/control_padding</item>
        <item name="android:textColor">@color/color_checkbox_text</item>
    </style>
</resources>